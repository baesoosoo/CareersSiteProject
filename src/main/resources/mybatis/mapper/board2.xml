<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="Board">
  	<select id="List" resultType="Board">
  		
  		select * from board order by board_no desc
  		
  	</select>
  	
  	<insert id="Writer" parameterType="Board">
  	
  	insert into board values(#{board_no}+1,#{board_writer},#{board_title},#{board_cont},#{board_pwd},default,sysdate,'') 
  	
  	</insert>
  	
  	<select id="Category" resultType="Category">
  	
	select * from jtest where length(code)=4
  	
  	</select>
 
  	<select id="Categorysub" parameterType="String" resultType="Category">
  	
	   select * from jtest where length(code) = 7 and code like #{no} || '%'
  	
  	</select>
  	
  	
  	<select id="Categorystep" parameterType="String" resultType="Category">
  	
	   select * from jtest where length(code) = 10 and code like #{no} || '%'
  	
  	</select>
  	
  	<select id="schoolname" parameterType="String" resultType="School">
  	
  		select * from ctest where c_code like CONCAT(#{code}, '%') and length(c_code) = 4
  		
  	</select>
  
  </mapper>